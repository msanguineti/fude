{
  "name": "fude",
  "version": "2.0.0",
  "description": "Node.js library for terminal text style formatting",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest -w",
    "test:coverage": "npm t -- --coverage",
    "posttest": "npm run format",
    "format": "prettier --loglevel warn --write .",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "prepublishOnly": "npm t && npm run build",
    "prebenchmarks": "npm t && npm run build && npm pack",
    "benchmarks": "npm i -C benchmark && node benchmark/index.js",
    "prepare": "husky install"
  },
  "keywords": [
    "color",
    "colors",
    "console",
    "colour",
    "colours",
    "terminal",
    "ansi",
    "cli",
    "string",
    "str",
    "style",
    "styles",
    "tty",
    "formatting",
    "rgb",
    "256",
    "shell",
    "xterm",
    "log",
    "logging",
    "command-line",
    "text"
  ],
  "author": "Mirco Sanguineti",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.8",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msanguineti/fude.git"
  },
  "bugs": {
    "url": "https://github.com/msanguineti/fude/issues"
  },
  "homepage": "https://github.com/msanguineti/fude#readme"
}
