{
  "name": "fude",
  "version": "3.0.1",
  "description": "Node.js library for terminal text style formatting",
  "keywords": [
    "terminal",
    "colors",
    "formatting",
    "cli",
    "console"
  ],
  "author": "Mirco Sanguineti",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "optimize": "prettier --write dist/index.d.ts && terser dist/index.js --mangle toplevel -c toplevel,passes=2,ecma=2019,unsafe -o dist/index.js",
    "lint": "tsc --noEmit && eslint --cache --fix src/index.ts",
    "format": "prettier --write src",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^14.18.21",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "colorize-template": "^1.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-unicorn": "^43.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "terser": "^5.14.1",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msanguineti/fude.git"
  },
  "bugs": {
    "url": "https://github.com/msanguineti/fude/issues"
  },
  "homepage": "https://github.com/msanguineti/fude#readme",
  "dependencies": {}
}
